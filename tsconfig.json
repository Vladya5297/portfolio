{
    "compilerOptions": {
        "target": "es6",
        "noImplicitAny": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "~/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "./src"
    ],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "allowSyntheticDefaultImports": true,
            "esModuleInterop": true,
        }
    }
}